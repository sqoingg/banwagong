 1     //回复文本消息
 2     private function transmitText($object, $content)
 3     {
 4         if (!isset($content) || empty($content)){
 5             echo "";
 			   exit;
 6         }
 7 
 8         $xmlTpl = "<xml>
 9     <ToUserName><![CDATA[%s]]></ToUserName>
10     <FromUserName><![CDATA[%s]]></FromUserName>
11     <CreateTime>%s</CreateTime>
12     <MsgType><![CDATA[text]]></MsgType>
13     <Content><![CDATA[%s]]></Content>
14 </xml>";
15         $result = sprintf($xmlTpl, $object->FromUserName, $object->ToUserName, time(), $content);
16 
17         return $result;
18     }
